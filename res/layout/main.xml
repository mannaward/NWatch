<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0.10"
            android:rowCount="5" android:columnCount="5">
        <Button
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:text="Соединение"
                android:id="@+id/button3" android:layout_gravity="center" android:layout_weight="0.10"
                android:layout_row="4" android:layout_column="1"/>
        <Button
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:text="Настройки"
                android:id="@+id/prefBtn" android:layout_gravity="center_horizontal" android:layout_weight="0.10"
                android:layout_row="4" android:layout_column="2"/>
    </GridLayout>
</LinearLayout>

