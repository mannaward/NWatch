<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0.10"
            android:rowCount="5" android:columnCount="2">
        <Button
                android:layout_width="166dp"
                android:layout_height="70dp"
                android:text="Соединение"
                android:id="@+id/button3" android:layout_gravity="center" android:layout_weight="0.10"
                android:layout_row="4" android:layout_column="0" android:gravity="center|center_horizontal"
                android:layout_marginLeft="15dp"/>
        <Button
                android:layout_width="171dp"
                android:layout_height="70dp"
                android:text="Настройки"
                android:id="@+id/prefBtn" android:layout_gravity="center"
                android:layout_row="4" android:layout_column="1"
                />
    </GridLayout>
</LinearLayout>

